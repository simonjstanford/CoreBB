@model CoreBB.Web.Models.LogInViewModel
@{
    ViewData["Title"] = "Login";
}

<div class="container col-4 offset-4 bb-panel">
    <div class="card border-info">
        <div class="card-header text-white bg-info">
            <strong>Login</strong>
        </div>
        <div class="card-body">
            <form asp-action="LogIn" method="post">
                <div class="form-group">
                    <label asp-for="Name"></label>
                    <input class="form-control" type="text" asp-for="Name" />
                </div>
                <div class="form-group">
                    <label asp-for="Password"></label>
                    <input class="form-control" type="password" asp-for="Password" />
                </div>
                <input type="submit" class="btn btn-primary float-right" value="Log In" />
            </form>
        </div>
    </div>
</div>

