@model IEnumerable<CoreBB.Web.Models.ForumIndexViewModel>
@{
    ViewData["Title"] = "Forums";
}

<div class="container bb-list">
    <div class="card border-info">
        <div class="card-header text-white bg-info">
            <strong>Forums</strong><span> - Total: @ViewBag.ForumCount</span>
        </div>
        <div class="card-body">
            <table class="table table-bordered table-striped table-hover">
                <tr>
                    <th>Name</th>
                    <th>Description</th>
                    <th>Since</th>
                    <th>Topics</th>
                    <th>Owner</th>
                    <th>Locked</th>
                    <th>Operation</th>
                </tr>
                @foreach (var item in Model)
                {
                <tr>
                    <td><a asp-controller="Topic" asp-action="Index" asp-route-id="@item.Forum.Id">@item.Forum.Name</a></td>
                    <td>@item.Forum.Description</td>
                    <td>@item.Forum.CreateDateTime.ToShortDateString()</td>
                    <td>@item.TopicCount</td>
                    <td><a asp-controller="User" asp-action="Detail" asp-route-name="@item.Forum.Owner.Name">@item.Forum.Owner.Name</a></td>
                    <td><input type="checkbox" asp-for="@item.Forum.IsLocked" disabled/></td>
                    <td>
                        <a class="btn-sm btn-primary" asp-action="Detail" asp-route-id="@item.Forum.Id">Detail</a>
                        <a class="btn-sm btn-success" asp-action="Index" asp-controller="Topic" asp-route-id="@item.Forum.Id">Enter</a>
                    </td>
                </tr>
                }
            </table>
        </div>
    </div>
</div>

